datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

generator client {
  provider = "cargo prisma"
  output   = "../src/db.rs"
}

model User {
  id          String @id
  displayName String
  posts       Post[]
}

model Post {
  id      String @id
  content String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}
